{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "mega-porno.com validation schema",
  "type": "object",
  "properties": {
    "host": {
      "type": "string",
	  "pattern": "[a-z-\\.]+"
    },
    "url": {
      "type": "string",
	  "format": "uri"
    },
    "header": {
      "type": "string"
    },
    "categories": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "link": {
              "type": "string",
			  "format": "uri"
            }
          }
        }
      ],
	  "minItems": 1
    },
    "duration": {
      "type": "string",
	  "pattern": "^\\d+:\\d{2}$"
    },
    "description": {
      "type": "string"
    },
    "image_url": {
      "type": "string",
	  "format": "uri"
    }
  },
  "required" : [
		"host",
		"url",
		"header",
		"categories",
		"duration",
		"description",
		"image_url"
	]
}