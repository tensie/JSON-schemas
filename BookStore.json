{
	"$schema" : "http://json-schema.org/draft-04/schema#",
	"title" : "Book shops schema",
	"type" : "object",
	"properties" : {
		"url" : {
			"type" : "string",
			"format": "uri"
		},
		"name" : {
			"type" : "string"
		},
		"image" : {
			"type" : "string",
			"format": "uri"
		},
		"author" : {
			"type" : "string"
		},
		"publisher" : {
			"type" : "string"
		},
		"description" : {
			"type" : "string"
		},
		"price" : {
			"type" : "object",
			"properties" : {
				"currency" : {
					"type" : "string",
					"pattern" : "RUR"
				},
				"type" : {
					"type" : "string",
					"pattern" : "currency"
				},
				"content" : {
					"type" : "number"
				}
			}
		},
		"availability" : {
			"type" : "string"
		},
		"year" : {
			"oneOf": [
			{ "type" : "number", "pattern" : "(19|20)\\d\\d" },
			{ "type" : "string", "pattern" : "(19|20)\\d\\d" }
			]
		},
		"cover" : {
			"type" : "string"
		},
		"pages" : {
			"oneOf": [
				{ "type" : "integer" },
				{ "type" : "string", "pattern" : "^[0-9 ]+" }
			]
		},
		"required" : [
			"url",
			"name",
			"availability"
		]
	}
}
